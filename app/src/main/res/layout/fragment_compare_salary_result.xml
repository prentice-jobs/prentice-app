<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:background="@color/white"
    tools:context=".ui.CompareSalaryResultFragment">

    <TableRow
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:weightSum="2">
        <TextView
            android:id="@+id/role1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Software Engineer Intern"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/role2"
            android:layout_width="0dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Software Engineer Intern"
            android:layout_weight="1"
            />
    </TableRow>
    <TableRow
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:weightSum="2">
        <TextView
            android:id="@+id/date1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Previous 3 month"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/date2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Previous 3 month"
            android:layout_weight="1"
            />
    </TableRow>
    <TableRow
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginVertical="4dp"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            android:background="@drawable/company1_background">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/logo1"
                android:src="@drawable/maxim_logo"
                />
            <TextView
                android:id="@+id/company1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Maxim"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginVertical="4dp"
            android:padding="4dp"
            android:background="@drawable/company2_background">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/logo2"
                android:src="@drawable/kominfo_logo"
                />
            <TextView
                android:id="@+id/company2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Kominfo"/>
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Salary (monthly)"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Salary (monthly)"
            android:layout_weight="1"
            />
    </TableRow>
    <TableRow
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:weightSum="2">
        <TextView
            android:id="@+id/salary1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rp3.1 mio"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginVertical="4dp"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            android:background="@drawable/company1_background"
            />
        <TextView
            android:id="@+id/salary2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rp3.4 mio"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginVertical="4dp"
            android:padding="4dp"
            android:background="@drawable/company2_background"
            />
    </TableRow>
    <TableRow
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Avg Intern Tenure"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Avg Intern Tenure"
            android:layout_weight="1"
            />
    </TableRow>
    <TableRow
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:weightSum="2">
        <TextView
            android:id="@+id/tenure1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3.5 months"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginVertical="4dp"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            android:background="@drawable/company1_background"
            />
        <TextView
            android:id="@+id/tenure2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="6 months"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginVertical="4dp"
            android:padding="4dp"
            android:background="@drawable/company2_background"
            />
    </TableRow>
    <TableRow
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Company Rating"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Company Rating"
            android:layout_weight="1"
            />
    </TableRow>
    <TableRow
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="4dp"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            android:background="@drawable/company1_background">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"/>
            <TextView
                android:id="@+id/rating1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.7"
                android:textSize="20dp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="4dp"
            android:padding="4dp"
            android:background="@drawable/company2_background">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"/>
            <TextView
                android:id="@+id/rating2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.5"
                android:textSize="20dp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:weightSum="2">
        <TextView
            android:id="@+id/seereview1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="See Review"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@drawable/company1_background"
            android:padding="8dp"
            android:layout_marginVertical="8dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            />
        <TextView
            android:id="@+id/seereview2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="See Review"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@drawable/company2_background"
            android:padding="8dp"
            android:layout_marginVertical="8dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            />
    </TableRow>
</TableLayout>